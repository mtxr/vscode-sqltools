{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "outDir": "../../../dist/ui",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "@sqltools/ui/*": ["./*"]
    }
  }
}
