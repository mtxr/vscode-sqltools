{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noEmit": true,
    "outDir": "../../../dist/extension",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "@sqltools/extension/*": ["./*"]
    }
  },
  "exclude": ["./test", "./node_modules", "./__mocks__", "./*.js"]
}
