{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "experimentalDecorators": true,
      "lib": ["es7"],
      "module": "commonjs",
      "removeComments": true,
      "resolveJsonModule": true,
      "outDir": "./lib",
      "sourceMap": true,
      "target": "ES3",
      "rootDir": "src",
    },
    "exclude": [
      "node_modules",
      "**/test/*"
  ]
  }
