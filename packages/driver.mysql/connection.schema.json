{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "database": {
      "title": "Database",
      "type": "string",
      "minLength": 1
    },
    "username": {
      "title": "Username",
      "type": "string",
      "minLength": 1
    },
    "usePassword": {
      "title": "Use password",
      "type": "string",
      "enum": [
        "Ask on connect",
        "Use empty password",
        "Save password",
        "Secure password"
      ],
      "default": "Ask on connect"
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 1
    }
  },
  "properties": {
    "connectionMethod": {
      "title": "Connect using",
      "type": "string",
      "minLength": 1,
      "enum": [
        "Server and Port",
        "Socket File",
        "Connection String"
      ],
      "default": "Server and Port"
    },
    "mysqlOptions": {
      "title": "MySQL driver specific options",
      "type": "object",
      "properties": {
        "authProtocol": {
          "type": "string",
          "enum": ["default", "xprotocol"],
          "default": "default",
          "title": "Authentication Protocol"
        }
      }
    },
    "connectionTimeout": {
      "title": "Connection Timeout",
      "type": "integer",
      "minimum": 0
    }
  },
  "dependencies": {
    "connectionMethod": {
      "oneOf": [
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Server and Port"
              ]
            },
            "server": {
              "title": "Server Address",
              "type": "string",
              "minLength": 1,
              "default": "localhost"
            },
            "port": {
              "title": "Port",
              "minimum": 1,
              "default": 3306,
              "type": "integer"
            },
            "database": {
              "$ref": "#/definitions/database"
          },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            }
        },
          "required": [
            "server",
            "port",
            "database",
            "username"
          ]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Socket File"
              ]
            },
            "socketPath": {
              "title": "Socket file path",
              "type": "string",
              "minLength": 1
            },
            "database": {
              "$ref": "#/definitions/database"
          },
            "username": {
              "$ref": "#/definitions/username"
            },
            "usePassword": {
              "$ref": "#/definitions/usePassword"
            }
        },
          "required": [
            "socketPath",
            "database",
            "username"
          ]
        },
        {
          "properties": {
            "connectionMethod": {
              "enum": [
                "Connection String"
              ]
            },
            "connectString": {
              "title": "Connection String",
              "type": "string",
              "minLength": 1
            }
          },
          "required": [
            "connectString"
          ]
        }
      ]
    },
    "usePassword": {
      "oneOf": [
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Ask on connect"
              ]
            },
            "askForPassword": {
              "type": "boolean",
              "default": true
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Use empty password"
              ]
            }
          }
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Save password"
              ]
            },
            "password": {
              "$ref": "#/definitions/password"
            }
          },
          "required": [
            "password"
          ]
        },
        {
          "properties": {
            "usePassword": {
              "enum": [
                "Secure password"
              ]
            }
          }
        }
      ]
    }
  },
  "required": [
    "connectionMethod"
  ]
}
